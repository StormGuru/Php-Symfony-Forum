{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="wrapper">
<div class="sb">
<div class="panel">AdminPanel</div>
<div class="adm_log">Admin: {{admin.login}}</div>
<div><a href="{{path('app_admin-users')}}">Users</a></div>
<div><a href="{{path('app_admin-forums')}}">Forums</a></div>
<div><a href="{{path('app_admin_subforums')}}">Subforums</a></div>
<div><a href="{{path('app_admin_topics')}}">Topics</a></div>
<div><a href="{{path('app_admin_comments')}}">Comments</a></div>
</div>
<div class="adm_content">
<table>
 <tr>
  <th>ID</th>
  <th>COMMENTATOR</th>
  <th>TEXT</th>
  <th>PAGE_ID</th>
  <th>EDIT</th>
  <th>DELETE</th>
 </tr>
 {% for comment in comments%}
 <tr>
 <td>{{comment.id}}</td>
  <td>{{comment.getCommentator.login}}</td>
  <td>{{comment.text}}</td>
  <td>{{comment.getArticle.id}}</td>
  <td class="green"><a href="{{path('app_admin_edit_comment', {'id': comment.id})}}"> Edit </td>
  <td class="red"><a href="{{path('app_admin_delete_com', {'id': comment.id} )}}" > Delete </td>
 </tr>
 {% endfor %}
</table>
</div>


</div>
{% endblock %}
