{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="wrapper">
<div class="sb">
<div class="panel">AdminPanel</div>
<div class="adm_log">Admin: {{admin.login}}</div>
<div><a href="{{path('app_admin-users')}}">Users</a></div>
<div><a href="{{path('app_admin-forums')}}">Forums</a></div>
<div><a href="{{path('app_admin_subforums')}}">Subforums</a></div>
<div><a href="{{path('app_admin_topics')}}">Topics</a></div>
<div><a href="{{path('app_admin_comments')}}">Comments</a></div>
</div>
<div class="adm_content">
<a href="{{path('app_admin_add_forum')}}"><div class="add_btn">Add new</div></a>
<table>
 <tr>
  <th>ID</th>
  <th>NAME</th>
  <th>EDIT</th>
 </tr>
 {% for forum in forums%}
 <tr>
 <td>{{forum.id}}</td>
  <td>{{forum.keywords}}</td>
  <td class="green"><a href="{{path('app_admin_edit_forum', {'id': forum.id})}}"> Edit </td>
 </tr>
 {% endfor %}
</table>
</div>


</div>
{% endblock %}
